<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}test_symfony{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
        <style>
         h1 {
             text-align:center;
         }
           .card-body{
           text-align :center;
           font-weight:bold;
           font-size:1.1em;
        }
         .card {
            margin: 20px;
            border-radius:20px 20px;
            box-shadow: rgba(0, 0, 0, 0.56) 0px 22px 70px 4px;
            height:400px;
            transition: all .4s ease;
            border:solid 1px gray;
    
        }
         .card:hover{
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
            background-color:#f0f0f0;
            box-shadow: 10px 10px rgba(0,0,0,.25);
        }  
        #formContainer{
            margin:auto;
            width:40%;
            padding: 10px;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
            border : solid 3px 3px black;
            text-align : center;
           
        }
        #formCard{
          width:100%;
          margin:auto;
          color:red;
        }
        #paginator{
           text-align:center;
           font-size:1.5em;
           font-weight:bold;
           width:100px;
           margin:auto;     
        }
        </style>
    </head>
    <body>
        <header class="sticky-top">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <div>
                        <a class="navbar-brand" href="{{path('home')}}">Home</a>
                    </div>
                    <div class="flex-end">
                    {% if app.user %}
                        <span style="color:white;">Welcome {{app.user.email}}</span><span> | </span>
                        <a class="navbar-brand" href="{{path('app_logout')}}">Sign out</a><span> | </span>
                        <a class="navbar-brand" href="{{path('user_profile',{'id': app.user.id})}}">My Profile</a><span> | </span>
                        <a class="navbar-brand" href="{{path('book_all')}}">All Books</a>
                    {% endif %}
                    </div>
                </div>
            </nav>
        </header>
         <div class="flashContainer">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div  class="alert alert-{{ label }}" role="alert"> {{message}} </div>
                {% endfor %}
            {% endfor %}    
        </div>  
        {% block body %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>
